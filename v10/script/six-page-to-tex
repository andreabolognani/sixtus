#!/usr/bin/python
# -*- encoding: utf-8 -*-

from __future__ import print_function
import sys
import getopt
#from converter import FullConverter as Converter

opts, args = getopt.gnu_getopt(sys.argv[1:], 'vdh', ['verbose', 'debug', 'help'])

for opt in opts:
	if opt == '-v' or opt == '--verbose':
		verbose = True
	elif opt == '-d' or opt == '--debug':
		debug == True
	elif opt == '-h' or opt == '--help':
		help_flag == True

print(help_flag)

def help_message ():

	print ("Usage: %s <six file> <tex file>" % sys.argv[0], file=sys.stderr)
	print ()
	print (" -v --verbose : print many messages")
	print (" -d --debug   : print debug messages")
	print (" -h --help    : print this message")

if help:
	help_message()
	sys.exit(0)

if len(args) != 2:
	help_message()
	sys.exit(1)

print(sys.argv)
sys.exit(1)

c = Converter(debug, verbose)

input_file    = sys.argv[1]
page_location = sys.argv[2]
output_file   = sys.argv[3]

c = Converter(page_location)
c.parse_file(input_file)
c.output_page_file(output_file)
